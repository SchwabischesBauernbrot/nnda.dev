<footer>
  <div class="footer-body">
    <div class="links-section horizontal this-site">
      <div class="footer-heading">This Site</div>

      <div class="icon-text site-opt">
        {{{icon "global" "scale-balanced"}}}
        <span>
          Licensed Under
          <a href="https://{{repoURL}}/blob/main/LICENSE"
            target="_blank"
            rel="nofollow noopener noreferrer"
            referrerpolicy="no-referrer"
            aria-label="GNU GPLv3 License text"
          >
            GNU GPLv3
          </a>
          <br>
          <small>
            (source code only)
          </small>
        </span>
      </div>

      {{#if buildCommitSHA}}
      <div class="icon-text site-opt">
        {{{icon "global" "box"}}}
        <span>
          Version
          <a href="https://{{repoURL}}/commit/{{buildCommitSHAFull}}"
            target="_blank"
            rel="nofollow noopener noreferrer"
            referrerpolicy="no-referrer"
            aria-label="Build commit SHA"
          >
            {{buildCommitSHA}}
          </a>
        </span>
      </div>
      {{/if}}

      <div class="icon-text site-opt">
        {{{icon "global" "clock"}}}
        <span>
          Last updated
          <abbr id="last-updated-label" title="{{buildTimetamp}}"></abbr>
        </span>
      </div>

      <ul class="nostyle">
      {{#each siteOptions}}
        <li class="icon-text">
          <a href="{{this.url}}"
            target="_blank"
            rel="nofollow noopener noreferrer"
            referrerpolicy="no-referrer"
            aria-label="{{{this.url}}}"
          >
            {{{this.icon}}}
            <span>
              {{this.name}}
            </span>
          </a>
        </li>
      {{/each}}
      </ul>

      <div class="package-info">
        This website is made possible with these awesome projects &amp; libraries üëáÔ∏è
      </div>
    </div>
    <div class="links-section">
      <blockquote class="note">
        <div class="title">{{{icon "global" "note-sticky"}}} Note</div>
        <p>{{{site.note}}}</p>
      </blockquote>
    </div>
  </div>

  <div class="packages"></div>

  <div class="footer-end">
    <div>
      Copyright &copy; {{year}} {{site.author}}{{#if allRightsReserved}}. All rights reserved.{{/if}}
    </div>
    <div class="flex-space"></div>
    <div>
      <a href="https://{{repoURL}}"
        target="_blank"
        rel="nofollow noopener noreferrer"
        referrerpolicy="origin"
      >
        {{{icon "global" "code"}}} Source Code
      </a>
    </div>
  </div>
</footer>

{{ script "/scripts/footer.ts" true }}