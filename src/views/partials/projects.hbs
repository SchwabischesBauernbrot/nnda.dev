<section id="projects">
  <div class="section-inner">
    <h1 class="section-title">Projects<small>プロジェクト</small></h1>
    <div></div>
    {{#each projects}}
      {{#if this.offsetElem}}
        <div class="hidden-display"></div>
      {{else}}
        <div class="project-card"
          style="
          {{#if this.image}}
            --img-bg: url({{this.image}});
          {{/if}}
          {{#if this.min-height}}
            min-height: {{this.min-height}};
          {{/if}}
          "
        >
          <h3>
            <a href="{{this.url}}"
              target="_blank"
              rel="noopener noreferrer"
              referrerpolicy="origin"
            >
              {{this.name}}
            </a>
          </h3>
          <div class="labels-container">
            {{#each this.labels}}
              <span class="project-label {{this}}">{{this}}</span>
            {{/each}}
          </div>
          <p>{{this.description}}</p>
        </div>
      {{/if}}
    {{/each}}
  </div>
</section>